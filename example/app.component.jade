.container
	h1 Image cropper made easy

	h2 Inline cropper
	.row
		.col-md-8.col-md-offset-2
			image-cropper(imageUrl="./wallhaven-450488.png")

	h2 Cropper form input

	form.form(*ngIf="form", [formGroup]="form")
		.form-group
			label.control-label Image
			.row
				.col-md-4.col-md-offset-4
					input-image-crop(formControlName="image", [settings]="{ width: 600, height: 400 }", [cropperOptions]="{ viewMode: 0 }")
