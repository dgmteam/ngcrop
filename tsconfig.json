{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"noImplicitAny": false,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitHelpers": false,
		"noEmitOnError": false,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": false,
		"lib": ["es6", "dom"],
		"baseUrl": "./src" ,
		"declaration": true,
		"outDir": "dist",
		"mapRoot": "./src",
		"stripInternal": true,
    "inlineSources": true,
		"skipLibCheck": true
	},
	"angularCompilerOptions": {
    "genDir": "./dist"
  },
	"awesomeTypescriptLoaderOptions": {
		"useWebpackText": true,
		"forkChecker": true
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
